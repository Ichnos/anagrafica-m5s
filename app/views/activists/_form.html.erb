<%= render 'shared/errors', obj: @activist %>
<div class='row'>
  <div class='col-xs-12'>
  <%= form_for(@activist, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Username %><br>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :username, class: "form-control", placeholder: "Scrivi il tuo username", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Nome %><br>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", placeholder: "Scrivi il tuo nome", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Cognome %><br>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :surname, class: "form-control", placeholder: "Scrivi il tuo cognome", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Email %><br>
      </div>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", placeholder: "Scrivi la tua email", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Città_di_nascita %><br>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :birth_city, class: "form-control", placeholder: "Scrivi la tua città di nascita", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Data_di_nascita %><br>
      </div>
      <div class="col-sm-10">
        <%= f.date_select :birth_date, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :WhatsApp %><br>
      </div>
      <div class="col-sm-2">
        <%= f.check_box :whatsApp, class: "form-control", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Facebook %><br>
      </div>
      <div class="col-sm-2">
        <%= f.check_box :facebook, class: "form-control", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Skype %><br>
      </div>
      <div class="col-sm-2">
        <%= f.check_box :skype, class: "form-control", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Google_Plus %><br>
      </div>
      <div class="col-sm-2">
        <%= f.check_box :google_plus, class: "form-control", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Twitter %><br>
      </div>
      <div class="col-sm-2">
        <%= f.check_box :twitter, class: "form-control", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Blog_M5S %><br>
      </div>
      <div class="col-sm-2">
        <%= f.check_box :mov_five_star, class: "form-control", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Meet_Up %><br>
      </div>
      <div class="col-sm-2">
        <%= f.check_box :meet_up, class: "form-control", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class: 'btn btn-primary btn-lg'>
        <%= f.submit %>
        </div>
    </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
    [ <%= link_to "Ritorna alla lista attivisti", activists_path %> ]
    </div>
  </div>
</div>