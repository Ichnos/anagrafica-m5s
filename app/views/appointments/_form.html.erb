<%= render 'shared/errors', obj: @appointment %>
<div class='row'>
  <div class='col-xs-12'>
  <%= form_for(@appointment, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :Titolo %><br>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control", placeholder: "Scrivi un titolo", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <div class: 'btn btn-primary btn-lg'>
          <%= f.submit %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>


